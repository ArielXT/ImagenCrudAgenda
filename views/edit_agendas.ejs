<%- include('layout/header') %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Editando Agenda: (<%= agenda.agenda %>)</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/update/<%= agenda._id %>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="nombre">Nombre</label>
                            <input type="text" name="nombre" class="form-control form-control-lg"
                            placeholder="Ingrese Nombre" value="<%= agenda.nombre %>" required/>                            
                        </div>
                        <div class="mb-3">
                            <label for="apellidos">Apellidos</label>
                            <input type="text" name="apellidos" class="form-control form-control-lg"
                            placeholder="Ingrese Apellidos" value="<%= agenda.apellidos %>" required/>                            
                        </div>
                        <div class="mb-3">
                            <label for="correo">Correo</label>
                            <input type="text" name="correo" class="form-control form-control-lg"
                            placeholder="Ingrese Correo" value="<%= agenda.correo %>" required/>                            
                        </div>
                        <div class="mb-3">
                            <label for="fecha_nac">Fecha de Nacimiento</label>
                            <input type="date" name="fecha_nac" class="form-control form-control-lg"
                            placeholder="Ingrese Fecha de Nacimiento" value="<%= agenda.fecha_nac %>" required/>                            
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Selecciona Imagen</label>
                            <input type="file" name="image" class="form-control form-control-lg" required/>                            
                            <img src="/<%= agenda.image %>" width="100" class="img-thumbnail mt-1"> 
                        </div>
                        <input type="hidden" name="old_image" value="<%= agenda.image %>">
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Editar Agenda" class="btn btn-success btn-lg"/>                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>