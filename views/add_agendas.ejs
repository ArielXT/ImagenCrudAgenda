<%- include('layout/header') %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Agregar Nuevo Agenda</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="id">Id</label>
                            <input type="text" name="id" class="form-control form-control-lg"
                            placeholder="Ingrese Id" required/>                            
                        </div>
                        <div class="mb-3">
                            <label for="nombre">Nombre</label>
                            <input type="text" name="nombre" class="form-control form-control-lg"
                            placeholder="Ingrese Nombre" required/>                            
                        </div>
                        <div class="mb-3">
                            <label for="apellidos">Apellidos</label>
                            <input type="text" name="apellidos" class="form-control form-control-lg"
                            placeholder="Ingrese Apellidos" required/>                            
                        </div>
                        <div class="mb-3">
                            <label for="correo">Correo</label>
                            <input type="text" name="correo" class="form-control form-control-lg"
                            placeholder="Ingrese Correo" required/>                            
                        </div>
                        <div class="mb-3">
                            <label for="fecha_nac">Fecha de Nacimiento</label>
                            <input type="date" name="fecha_nac" class="form-control form-control-lg"
                            placeholder="Ingrese Fecha de Nacimiento" required/>                            
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Selecciona Imagen</label>
                            <input type="file" name="image" class="form-control form-control-lg" required/>                            
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Agregar Agenda" class="btn btn-primary btn-lg"/>                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>